{
  "name": "stacklift-backend",
  "version": "1.0.0",
  "description": "StackLift API - by Statix",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:with-migrations": "node-pg-migrate up && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "migrate:create": "node-pg-migrate create",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down"
  },
  "node-pg-migrate": {
    "migrationsDir": "migrations",
    "direction": "up"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "ioredis": "^5.4.1",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.0",
    "@types/pg": "^8.11.6",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  }
}
